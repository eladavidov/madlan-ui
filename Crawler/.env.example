# Database Configuration
# DB_TYPE: Choose database type - 'sqlite' or 'duckdb'
# DuckDB recommended for full schema documentation (COMMENT ON TABLE/COLUMN support)
DB_TYPE=duckdb
DB_PATH=./data/databases/properties.db
DUCKDB_PATH=./data/databases/properties.duckdb

# Storage Configuration
IMAGES_DIR=./data/images
EXPORTS_DIR=./data/exports
CACHE_DIR=./data/cache
LOGS_DIR=./logs

# Crawler Configuration
CONCURRENCY_MIN=2
CONCURRENCY_MAX=5
MAX_REQUESTS_PER_MINUTE=60
REQUEST_DELAY_MIN=2000
REQUEST_DELAY_MAX=5000

# Anti-Blocking Strategy: Fresh Browser Per Property
# IMPORTANT: Set to "true" to bypass PerimeterX blocking (proven 100% success)
# Trade-off: Slower (~2-3 min per property) but reliable
FRESH_BROWSER_PER_PROPERTY=true

# Random delay between browser launches (milliseconds)
# Recommended: 60000-120000 (60-120 seconds) to avoid pattern detection
BROWSER_LAUNCH_DELAY_MIN=60000
BROWSER_LAUNCH_DELAY_MAX=120000

# Target Configuration
TARGET_CITY=חיפה
MAX_PROPERTIES=100

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# Browser Configuration
HEADLESS=true
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# CAPTCHA Solving Configuration
CAPTCHA_SERVICE=capsolver
CAPTCHA_API_KEY=your_capsolver_api_key_here
CAPTCHA_TIMEOUT=120000
MAX_REQUEST_RETRIES=3
